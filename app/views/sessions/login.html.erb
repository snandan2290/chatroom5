<h4 class="ui center aligned mdedium icon header">
  Welcome to MessageMe - A complete chatroom
</h4>

<h4 class="ui center aligned mdedium icon header">
  <i class="circular inverted  red power off icon"></i>
  Login here
</h4>

<%= render 'shared/error', obj: @user%>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <%# Loging %>
    <div class="column">
      <%= form_with(scope: :session, local: true, class: "ui form", path: login_path) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui blue submit button" %>
      <% end %>
    </div>

    <%# Sign UP  %>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>